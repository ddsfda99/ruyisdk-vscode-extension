{
  "name": "ruyisdk-vscode-extension",
  "displayName": "RuyiSDK",
  "description": "VS Code integration for the Ruyi package manager: detection, installation, package view, and news display.",
  "version": "0.1.0",
  "publisher": "ddsfda99",
  "license": "Apache-2.0",
  "engines": { "vscode": "^1.88.0" },
  "categories": ["Other", "Programming Languages", "Debuggers"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "ruyi.detect", "title": "Ruyi: Detect Installation and Version", "category": "Ruyi" },
      { "command": "ruyi.install", "title": "Ruyi: Install RuyiSDK", "category": "Ruyi" }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  }
}
